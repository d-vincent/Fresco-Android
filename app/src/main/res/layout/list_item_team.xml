<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:id="@+id/team_layout"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">
    
    <biome.fresco.CustomTextViewLogo
        android:id="@+id/team_name"
        android:textSize="24sp"
        android:textColor="@color/tw__composer_black"
        android:text="Name of team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <biome.fresco.SourceSansRegularTextView
        android:id="@+id/team_description"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="@color/tw__composer_black"
        android:text="The description of the project will go here. If itwraps, it will wrap like this"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        
        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/project_count_image"
            android:src="@drawable/ic_briefcase_grey600_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView

            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/project_count_image"
            android:text="1"
            android:id="@+id/project_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/project_count"
            android:layout_alignParentBottom="true"
            android:id="@+id/chat_count_image"
            android:src="@drawable/ic_message_text_grey600_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView

            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/chat_count_image"
            android:text="1"
            android:id="@+id/chat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/chat_count"
            android:layout_alignParentBottom="true"
            android:id="@+id/member_count_image"
            android:src="@drawable/ic_account_box_grey600_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView

            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/member_count_image"
            android:text="1"
            android:id="@+id/member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

</LinearLayout>