<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biome.fresnotes.Fragments.PhotoViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />



    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/share_photo"
        android:src="@drawable/ic_download_white_48dp"
        android:id="@+id/download_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/share_photo"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_share_variant_white_48dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
